---Ghost Gui UI Library
loadstring(game:HttpGet('https://raw.githubusercontent.com/GhostPlayer352/UI-Library/refs/heads/main/Ghost%20Gui'))()
game.CoreGui.GhostGui.MainFrame.Title.Text = "Zombie Survival V0.1"
---

AddContent("Toogle", "Auto Kill Use UZI", [[
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = game:GetService("Players").LocalPlayer

-- Hàm bắn
local function HitTarget(tool, part, humanoid, dmg, mat, sid)
    if tool and part and humanoid then
        local args = {
            tool,
            {
                p = part.Position,
                pid = 1,
                part = part,
                d = dmg,
                maxDist = 999,
                h = humanoid,
                m = mat,
                n = Vector3.new(0,1,0),
                t = tick(),
                sid = sid
            }
        }
        ReplicatedStorage:WaitForChild("WeaponsSystem"):WaitForChild("Network"):WaitForChild("WeaponHit"):FireServer(unpack(args))
    end
end

-- AutoZombie loop
task.spawn(function()
    while task.wait(0.05) do
        local folder = workspace:FindFirstChild("ZombiesAlive")
        if folder then
            for _, z in ipairs(folder:GetChildren()) do
                local hum = z:FindFirstChildOfClass("Humanoid")
                local part = z:FindFirstChild("Left Leg") or z:FindFirstChildWhichIsA("BasePart")
                HitTarget(LocalPlayer.Character:FindFirstChild("Uzi"), part, hum, 5, Enum.Material.Plastic, 39)
            end
        end
    end
end)

-- AutoWolf loop
task.spawn(function()
    while task.wait(0.05) do
        local wolf = workspace:FindFirstChild("WolfModel")
        if wolf then
            local hum = wolf:FindFirstChildOfClass("Humanoid")
            local part = wolf:FindFirstChild("LowerTorso") or wolf:FindFirstChildWhichIsA("BasePart")
            HitTarget(LocalPlayer.Character:FindFirstChild("Uzi"), part, hum, 15, Enum.Material.Leather, 6)
        end
    end
end)
]])

AddContent("TextButton", "TP Add Wood", [[
game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(973.674438, 407.208954, -3369.55518, 0, 0, 1, 0, 1, -0, -1, 0, 0)
]])

AddContent("TextButton", "TP Add All Potion", [[
game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(1041.04077, 393.379517, -2603.52979, 0, 0, -1, 0, 1, 0, 1, 0, 0)
]])

AddContent("TextButton", "TP RawMeat", [[
local player = game.Players.LocalPlayer.Character
local part = game.Workspace["RawMeat"]
player.HumanoidRootPart.CFrame = part.CFrame
wait(.2)
]])
